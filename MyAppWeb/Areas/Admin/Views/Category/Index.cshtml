@model MyApp.Models.ViewModel.CategoryVM
@{
    ViewData["Title"] = "Index";
}


<h1>Category List</h1>
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">List Of Categories</div>
        <div class="col-6"><a asp-action="CreateUpdate" asp-controller="Category">Create New</a></div>
    </div>
</div>
<table id="myTable" class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.categories)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id">Edit <i class="bi bi-pencil-square"></i></a>||
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete <i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

